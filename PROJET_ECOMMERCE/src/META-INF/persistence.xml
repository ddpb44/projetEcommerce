	<persistence-unit name="PU_E">
	
	<!-- Specifier la data source à utiliser -->
	<jta-data-source>java:/db_ecommerce</jta-data-source>
	
	<!-- Declaration des classes persistantes -->
	
	
	<!-- Spécifier les propriétes de hibernate -->
	<properties>
	<property name="hibernate.hbm2ddl.auto" value="create"></property>
	<property name="hibernate.show_sql" value="true"></property>
	</properties>
	
	</persistence-unit>
</persistence>
